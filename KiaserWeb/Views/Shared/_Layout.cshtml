<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>- - Kiaser</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        html, body, .base {
            height: 100%;
            width: 100%;
            padding-bottom: 2px;
            padding-top: 5px;
        }

        #header {
            height: 6%
        }

        #nav {
            margin-top: 30px;
            height: 95%;
            width: 240px;
            background-color: #eeeeee;
            width: 200px;
            float: left;
            padding: 2px;
        }

        #section {
            margin-top: 30px;
            height: 95%;
            width: 85%;
            float: left;
            padding: 10px;
        }
    </style>
</head>
<body>
    <div class="base">
        <div id="header" class="navbar-inverse navbar-fixed-top" style="width:100%">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("应用程序名称", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-header">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("主页", "Index", "Home")</li>
                        <li>@Html.ActionLink("关于", "About", "Home")</li>
                        <li>@Html.ActionLink("联系方式", "Contact", "Home")</li>
                        <li>@Html.ActionLink("联系方式", "Contact", "Home")</li>
                        <li>@Html.ActionLink("联系方式", "Contact", "Home")</li>
                    </ul>
                </div>
                <div class="navbar-header" style="float:right">
                    <ul class="nav navbar-nav">
                        <li style="padding-right:50px">@Html.ActionLink("注销", "LogOut", "Account")</li>
                    </ul>
                      
                </div>
            </div>
        </div>

        <div id="nav">
            <el-row class="tac">
                <el-col :span="24">
                    <el-menu class="el-menu-vertical-demo" v-on:open="handleOpen" v-on:close="handleClose" default-active="2">
                        <menutree :data="menudata"></menutree>
                </el-col>
            </el-row>
        </div>
        <div class="container body-content" id="section">
            @RenderBody()
        </div>
    </div>

    @*<div id="footer">
            <footer>
                <p>&copy; @DateTime.Now.Year - 学校系统管理</p>
            </footer>
        </div>*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/vue")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

